<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- ===================== Program ===================== -->

    <bean id="kenyaemr.mchps.program" class="org.openmrs.module.kenyacore.program.ProgramDescriptor">
        <property name="targetUuid" value="bd522bff-a673-11eb-b7e8-080027039628" />
        <property name="eligibilityCalculation" value="org.openmrs.module.kenyaemr.calculation.library.mchps.EligibleForMchpsProgramCalculator" />
        <property name="defaultEnrollmentForm" ref="kenyaemr.mchps.form.enrollment"/>
        <property name="defaultCompletionForm" ref="kenyaemr.mchps.form.completion"/>
        <property name="patientForms">
            <set>
            </set>
        </property>
        <property name="visitForms">
            <set>
                <ref bean="kenyaemr.mchps.form.practitionerExperience" />
            </set>
        </property>
        <property name="fragments">
            <map>
                <entry key="enrollment-summary" value="kenyaemr:program/mchps/mchpsEnrollmentSummary" />
                <entry key="care-panel" value="kenyaemr:program/mchps/mchpsCarePanel" />
                <entry key="completion-summary" value="kenyaemr:program/mchps/mchpsCompletionSummary" />
            </map>
        </property>
        <property name="order" value="400" />
    </bean>


    <!-- ===================== Forms ===================== -->

    <!--  MCHPS Enrollment -->
    <bean id="kenyaemr.mchps.form.enrollment" class="org.openmrs.module.kenyacore.form.FormDescriptor">
        <property name="targetUuid" value="ae6268ba-a685-11eb-b7e8-080027039628" />
        <property name="apps">
            <set>
                <ref bean="kenyaemr.app.registration"/>
                <ref bean="kenyaemr.app.intake"/>
                <ref bean="kenyaemr.app.clinician" />
                <ref bean="kenyaemr.app.chart" />
            </set>
        </property>
        <property name="icon" value="kenyaui:forms/generic.png" />
        <property name="htmlform" value="kenyaemr:mchps/mchpsEnrollment.html" />
    </bean>

    <!--  MCHPS  Practitioner questionnaire -->
    <bean id="kenyaemr.mchps.form.practitionerExperience" class="org.openmrs.module.kenyacore.form.FormDescriptor">
        <property name="targetUuid" value="9fc00eb9-9c53-11eb-8e03-080027039628" />
        <property name="apps">
            <set>
                <ref bean="kenyaemr.app.clinician" />
                <ref bean="kenyaemr.app.chart" />
            </set>
        </property>
        <property name="icon" value="kenyaui:forms/generic.png" />
        <property name="htmlform" value="kenyaemr:mchps/mchpsPractitionerExperience.html" />
    </bean>

    <!-- MCHPS Completion -->
    <bean id="kenyaemr.mchps.form.completion" class="org.openmrs.module.kenyacore.form.FormDescriptor">
        <property name="targetUuid" value="b5bd68df-a685-11eb-b7e8-080027039628"/>
        <property name="apps">
            <set>
                <ref bean="kenyaemr.app.registration"/>
                <ref bean="kenyaemr.app.intake"/>
                <ref bean="kenyaemr.app.clinician"/>
                <ref bean="kenyaemr.app.chart"/>
            </set>
        </property>
        <property name="icon" value="kenyaui:forms/completion.png"/>
        <property name="htmlform" value="kenyaemr:mchps/mchpsDiscontinuation.html"/>
    </bean>


</beans>